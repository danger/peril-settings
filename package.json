{
  "name": "danger-peril-settings",
  "version": "1.0.0",
  "repository": "https://github.com/danger/peril-settings",
  "author": "Orta Therox <orta@artsymail.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged"
  },
  "dependencies": {},
  "devDependencies": {
    "@slack/client": "^3.12.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.25",
    "danger": "^2.0.0-alpha.8",
    "danger-plugin-spellcheck": "^0.7.7",
    "danger-plugin-yarn": "^0.3.2",
    "github-webhook-event-types": "^1.0.0",
    "jest": "^21.0.2",
    "prettier": "^1.9.2",
    "ts-jest": "^21.0.0",
    "typescript": "^2.3.2"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
  },
  "lint-staged": {
    "*.@(ts|tsx)": ["yarn prettier --write", "jest", "git add"],
    "*.json": ["yarn prettier --write", "git add"],
    "*.md": ["yarn prettier --write", "git add"]
  }
}

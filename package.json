{
  "name": "danger-peril-settings",
  "version": "1.0.0",
  "repository": "https://github.com/danger/peril-settings",
  "author": "Orta Therox <orta@artsymail.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@types/node-fetch": "^1.6.9",
    "@types/semver": "^5.4.0",
    "node-fetch": "^2.1.2",
    "semver": "^5.4.1",
    "semver-sort": "^0.0.4"
  },
  "devDependencies": {
    "@slack/client": "^4.2.2",
    "@types/jest": "^22.2.3",
    "@types/node": "^8.0.25",
    "danger": "^3.7.14",
    "danger-plugin-spellcheck": "^1.2.2",
    "danger-plugin-yarn": "^1.3.0",
    "github-webhook-event-types": "^1.0.0",
    "husky": "^0.14.3",
    "jest": "^21.0.2",
    "jsome": "^2.5.0",
    "lint-staged": "^6.0.0",
    "prettier": "^1.12.1",
    "ts-jest": "^21.0.0",
    "typescript": "^2.8.3"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
  },
  "lint-staged": {
    "*.@(ts|tsx)": ["yarn prettier --write", "jest", "git add"],
    "*.json": ["yarn prettier --write", "git add"],
    "*.md": ["yarn prettier --write", "git add"]
  }
}
